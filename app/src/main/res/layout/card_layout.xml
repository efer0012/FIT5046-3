<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/fit_001" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            card_view:layout_constraintStart_toEndOf="@+id/imageView5"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@android:drawable/ic_menu_recent_history" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/imageView5"
            card_view:srcCompat="@android:drawable/ic_menu_mylocation" />

        <TextView
            android:id="@+id/card_className"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Boxing"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toTopOf="@+id/imageView7"
            card_view:layout_constraintStart_toEndOf="@+id/imageView5"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView6"
            tools:textStyle="bold" />

        <ImageView
            android:id="@+id/card_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@android:drawable/ic_menu_info_details" />

        <TextView
            android:id="@+id/beFitHQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Be FiT HQ"
            android:textSize="10sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageView7"
            card_view:layout_constraintStart_toEndOf="@+id/imageView7"
            card_view:layout_constraintTop_toBottomOf="@+id/card_className" />

        <TextView
            android:id="@+id/card_classTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00 AM"
            android:textSize="10sp"
            card_view:layout_constraintBottom_toTopOf="@+id/card_className"
            card_view:layout_constraintStart_toEndOf="@+id/imageView6"
            card_view:layout_constraintTop_toTopOf="@+id/imageView6" />

        <TextView
            android:id="@+id/card_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="11:00 AM"
            android:textSize="10sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/card_classTime"
            card_view:layout_constraintStart_toEndOf="@+id/card_classTime"
            card_view:layout_constraintTop_toTopOf="@+id/card_classTime"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="10sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/card_classTime"
            card_view:layout_constraintEnd_toStartOf="@+id/card_endTime"
            card_view:layout_constraintStart_toEndOf="@+id/card_classTime" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>